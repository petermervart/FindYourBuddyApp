<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivityWebRTC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/oval_shape_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_meeting"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="Videohovor"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/meeting_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_meeting"
            android:layout_margin="5dp"
            android:background="@drawable/curve_background"
            android:hint="Zadaj názov miestnosti"
            android:padding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/meeting_id">

            <Button
                android:id="@+id/start_meeting"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Začať hovor"
                android:textColor="@color/white"
                app:backgroundTint="@color/purple_500"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/join_meeting"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Pripojiť sa"
                android:textColor="@color/white"
                app:backgroundTint="@color/purple_500"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>